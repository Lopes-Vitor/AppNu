<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vw_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/background_txt_cards"
        />

    <ImageView
        android:id="@+id/img_card"
        android:layout_marginStart="25dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/vw_card"
        app:layout_constraintBottom_toBottomOf="@id/vw_card"
        android:src="@drawable/ic_baseline_credit_card_24"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/vw_card"
        app:layout_constraintBottom_toBottomOf="@id/vw_card"
        app:layout_constraintStart_toEndOf="@id/img_card"
        android:text="@string/txt_mycards"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textColor="@color/black_a"
        />

</androidx.constraintlayout.widget.ConstraintLayout>