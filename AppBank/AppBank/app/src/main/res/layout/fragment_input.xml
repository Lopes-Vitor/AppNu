<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.output.OutputFragment">

    <ImageView
        android:id="@+id/img_close_input"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtvw_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/txt_output"
        android:textColor="@color/black_a"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/img_close_input"
        app:layout_constraintTop_toBottomOf="@id/img_close_input" />

    <EditText
        android:id="@+id/edit_txt_money_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="R$ 0,00"
        android:inputType="numberSigned"
        android:textColorHint="@color/black_a"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txtvw_input"
        app:layout_constraintTop_toBottomOf="@id/txtvw_input" />

    <View
        android:id="@+id/vw_input"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgvw_btn_input"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="@id/vw_input"
        app:layout_constraintEnd_toEndOf="@id/vw_input"
        app:layout_constraintStart_toStartOf="@id/vw_input"
        app:layout_constraintTop_toTopOf="@id/vw_input" />

</androidx.constraintlayout.widget.ConstraintLayout>