<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202124">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ImcActivity">

        <TextView
            style="@style/TextViewForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imc_title"
            android:textColor="#FFFCFC"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            style="@style/TextViewForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:text="@string/Imc_desc"
            android:textColor="@color/GrayLight" />

        <EditText
            android:id="@+id/imc_edit_peso"
            style="@style/EditTextForm"
            android:backgroundTint="#65b4ff"
            android:hint="@string/peso"
            android:textColor="@android:color/white"
            android:textColorHint="#65b4ff"
            tools:targetApi="lollipop" />

        <EditText
            android:id="@+id/imc_edit_altura"
            style="@style/EditTextForm"
            android:backgroundTint="#65b4ff"
            android:hint="@string/altura"
            android:textColor="@android:color/white"
            android:textColorHint="#65b4ff"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/button_imc_edit"
            style="@style/ButtonForm"
            android:text="@string/calc"
            android:textColor="@android:color/white" />


    </LinearLayout>
</ScrollView>